@model IEnumerable<WSModel>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Consulta Cep</title>
    <link href="~/css/bootstrap.min (1).css" rel="stylesheet" />
</head>
<body>
    <h3>Consultar e Cadastrar CEP</h3>
    <form asp-action="PesquisarCep" asp-controller="WS">
        <div class="container" style="margin-top:30px">

            <label for="txtCep">CEP</label>
            <input type="text" id="txtCep" class="form-control" name="txtCep" />
            <input type="submit" value="Consultar e Cadastrar" class="btn-info" />
        </div>
    </form>



    <div class="m-3">
        <table class="table table-hover table-striped" style="text-align:left">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Cep)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Logradouro)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Bairro)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Localidade)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Uf)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cep)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Logradouro)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Bairro)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Localidade)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Uf)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</body>
</html>

